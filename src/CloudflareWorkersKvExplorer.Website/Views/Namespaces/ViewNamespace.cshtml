@model CloudflareWorkersKvExplorer.Website.Models.ViewNamespaceModel
@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Namespaces")">Namespaces</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2>@Model.Name</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Options</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var key in Model.Keys)
            {
                <tr>
                    <td scope="row">@key</td>
                    <td>
                        <a class="btn btn-light" href="@Url.Action("Index", "KeyValues", new {Key = key})">Edit</a>
                        <a class="btn btn-danger btn-key-delete" data-key="@key">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <a class="btn btn-success" href="@Url.Action("Index", "KeyValues", new {Key = string.Empty})">Create</a>
    </div>
</div>
<script>
    'use strict';

    window.addEventListener('load', function () {
        var elements = document.querySelectorAll('.btn-key-delete');

        elements.forEach(e => {
            e.addEventListener('click', (evt) => {
                var element = evt.target;
                var key = element.getAttribute('data-key');

                fetch('/KeyValues/' + key, {
                    method: "DELETE",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    credentials: "same-origin"
                }).then(() => {
                    window.location.reload(false);
                }, (error) => {
                    console.error(error);
                });
            });
        });
    });
</script>
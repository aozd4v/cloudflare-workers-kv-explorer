@model CloudflareWorkersKvExplorer.Website.Models.SaveNamespaceModel
@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Namespaces")">Namespaces</a></li>
                <li class="breadcrumb-item active" aria-current="page">@(string.IsNullOrWhiteSpace(Model.Name) ? "Edit" : Model.Name)</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2>@Model.Name</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Save" method="post" enctype="multipart/form-data">
            <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required="required" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

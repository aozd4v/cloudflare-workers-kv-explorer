@using Microsoft.AspNetCore.Http
@model CloudflareWorkersKvExplorer.Website.Models.KeyValueModel

@{
    ViewBag.Title = Model.Key;
    Layout = "_Layout";

    var namespaceId = Context.Session.GetString("namespaceId");
    var namespaceTitle = Context.Session.GetString("namespaceTitle");
}

<div class="row">
    <div class="col-sm-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Namespaces")">Namespaces</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("ViewNamespace", "Namespaces", new {Id = namespaceId})">@namespaceTitle</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Key</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h2>@Model.Key</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Save" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" required="required" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Json" class="control-label"></label>
                <textarea asp-for="Json" class="form-control" required="required" rows="6"></textarea>
                <span asp-validation-for="Json" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>